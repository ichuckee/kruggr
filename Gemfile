source 'https://rubygems.org'

gem 'rails', '3.2.12'
gem 'jquery-rails'

group :production do
	gem 'pg'
	gem 'rails_12factor'
end

group :test do
	gem 'selenium-webdriver'
	gem 'capybara'
end


group :development, :test do
	gem 'sqlite3'
	gem 'rspec-rails'
end

group :doc do
	gem 'sdoc', require: false 
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails'
  gem 'turbolinks', '1.3.0'
  gem 'jbuilder'
end
